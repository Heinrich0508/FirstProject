<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_selector"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imViewOfProduct"
            android:layout_width="70dp"
            android:layout_height="70dp"

            />

        <TextView
            android:id="@+id/tvNameOfProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imViewOfProduct"
            android:layout_toRightOf="@id/imViewOfProduct"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold|italic"
            />

        <TextView
            android:id="@+id/tvPriceOfProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameOfProduct"
            android:layout_toEndOf="@+id/imViewOfProduct"
            android:layout_toRightOf="@+id/imViewOfProduct"
            android:layout_marginLeft="70dp"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:textColor="#000"
            />



    </RelativeLayout>

</LinearLayout>
